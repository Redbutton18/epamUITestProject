<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="EPAM home page tests"
       thread-count="3" parallel="tests" verbose="3">
    <test name="Home page tests - Chrome">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.epam.homePageTests.HomePageTests"></class>
            <class name="com.epam.services.engineer.EngineerPageTest"></class>
        </classes>
    </test>

    <test name="Home page tests - FF">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.epam.homePageTests.HomePageTests"></class>
            <class name="com.epam.services.engineer.EngineerPageTest"></class>

        </classes>
    </test>
</suite>